<!DOCTYPE html>
<html>
<head>
  <title>Monepicerie2</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">
  <div id="banner">
    <%= image_tag("monepicerie.png") %>
    <%= @page_title || "" %>
  </div>
  <div id="columns">
    <div id="side">
      <% if @cart %>
        <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
          <%= render @cart %>
        <% end %>
      <% end %>

      <ul>
        <li><a href="http://www....">Acceuil</a></li>
        <li><a href="http://www..../faq">Questions</a></li>
        <li><a href="http://www..../news">Nouvelles</a></li>
        <li><a href="http://www..../contact">Contactez-nous</a></li>
      </ul>
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>
</html>
